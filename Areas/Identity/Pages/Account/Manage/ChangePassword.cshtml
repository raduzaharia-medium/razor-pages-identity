@page
@model ChangePasswordModel

@{
    ViewData["Title"] = "Change password";
}

<h3>Change password</h3>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="CurrentPassword">
                <label class="form-label" asp-for="CurrentPassword">Current password</label>
                <span class="invalid-feedback d-block" asp-validation-for="CurrentPassword"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="NewPassword">
                <label class="form-label" asp-for="NewPassword">New password</label>
                <span class="invalid-feedback d-block" asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="ConfirmNewPassword">
                <label class="form-label" asp-for="ConfirmNewPassword">Confirm new password</label>
                <span class="invalid-feedback d-block" asp-validation-for="ConfirmNewPassword"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Change password</button>
        </form>
    </div>